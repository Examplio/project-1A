<Window x:Class="SortVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sort Visualizer - Heap,Insertion, Bubble" Height="600" Width="900"
        Background="#222222">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#333333" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <ComboBox x:Name="AlgoSelector" Width="150" Height="30" Margin="10" SelectedIndex="0" FontSize="14">
                    <ComboBoxItem Content="Bubble Sort"/>
                    <ComboBoxItem Content="Insertion Sort"/>
                    <ComboBoxItem Content="Heap Sort"/>
                </ComboBox>

                <Label Content="Prędkość:" Foreground="White" VerticalAlignment="Center"/>
                <Slider x:Name="SpeedSlider" Minimum="1" Maximum="200" Value="20" Width="150" Margin="10" VerticalAlignment="Center" IsDirectionReversed="True"/>

                <Button Content="Generuj" Click="BtnGenerate_Click" Width="100" Height="30" Margin="5" Background="#007ACC" Foreground="White"/>
                <Button Content="START" Click="BtnStart_Click" Width="100" Height="30" Margin="5" Background="#28A745" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Margin="20" BorderBrush="#5555" BorderThickness="1">
            <StackPanel x:Name="GraphContainer" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Center"/>
        </Border> 
    </Grid> 
</Window> 